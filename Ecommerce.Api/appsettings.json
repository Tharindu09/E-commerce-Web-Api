{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "ReverseProxy": {
    "Routes": {
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "auth-route": {
      "ClusterId": "user-cluster",
      "Match": { "Path": "/api/auth/{**catch-all}" }
      }
    },

    "Clusters": {
      "product-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5258/" }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5290/" }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5074/" }
        }
      },
      "order-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5086/" }
        }
      }
    }
  },
  "Jwt": {
    "Key": "Mapa1234567890SecretKey256Bitlong",
    "Issuer": "UserService",
    "Audience": "ApiGateway",
    "ExpiryMinutes": 120
  },


  "AllowedHosts": "*"
}
