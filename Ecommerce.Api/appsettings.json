{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "ReverseProxy": {
    "Routes": {
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        }
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "product-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5258/" }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5290/" }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5074/" }
        }
      },
      "order-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5086/" }
        }
      }
    }
  },


  "AllowedHosts": "*"
}
