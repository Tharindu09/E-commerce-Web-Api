{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "ReverseProxy": {
    "Routes": {
      "product-route": {
        "ClusterId": "product-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "Authenticated"
      },
      "auth-route": {
      "ClusterId": "user-cluster",
      "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/api/payments/{**catch-all}"
        }}
      
    },

    "Clusters": {
      "product-cluster": {
        "Destinations": {
          "d1": { "Address": "${PRODUCT_SERVICE_URL}" }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "d1": { "Address": "${CART_SERVICE_URL}" }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": { "Address": "${USER_SERVICE_URL}" }
        }
      },
      "order-cluster": {
        "Destinations": {
          "d1": { "Address": "${ORDER_SERVICE_URL}" }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "d1": { "Address": "${PAYMENT_SERVICE_URL}" }
        }
      }
    }
  },
  "Jwt": {
    "Key": "",
    "Issuer": "",
    "Audience": "",
    "ExpiryMinutes": 120
  },


  "AllowedHosts": "*"
}
